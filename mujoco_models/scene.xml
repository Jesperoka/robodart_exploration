<mujoco model="panda scene">

    <!-- Set up and include the Franka Emika Robot -->
    <compiler angle="radian" meshdir="franka_emika_panda/assets" autolimits="true"/>
    <option integrator="implicitfast" impratio="10"/>
    <include file="franka_emika_panda/panda_robodart.xml"/>

    <!-- <statistic center="0.3 0 0.4" extent="1"/> -->

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
    </visual>

    <!-- Assets for other things than the robot -->
    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
        <texture type="2d" name="dartboard_texture" file="dart_board/dartboard.png"/>

        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
        <material name="dartboard_material" texture="dartboard_texture" />

        <mesh file="../../dart/assets/dart1.obj" name="dart_mesh"/>
    </asset>

    <worldbody>
        <light pos="0 0 0" dir="0 0 -1" directional="true"/>

        <include file="robot_stand/robot_stand.xml"/> 
        <include file="dart/dart.xml" />
        <include file="dart_board/dart_board.xml"/>

    </worldbody>

</mujoco>

